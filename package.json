{
  "name": "hai-web3-functions",
  "version": "0.0.1",
  "description": "Hai Web3 Functions for Gelato",
  "repository": "https://github.com/hai-on-op/gelato-tasks",
  "private": false,
  "scripts": {
    "build": "yarn clean && yarn install && yarn compile && yarn generate-types && npx tsc",
    "generate-types": "typechain ./node_modules/@hai-on-op/abis/abi/*.json --target ethers-v5 --out-dir ./typechain",
    "compile": "npx hardhat compile --force",
    "clean": "rm -rf dist",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write '*/**/*.{js,sol,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,sol,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint contracts/**/*.sol",
    "test": "npx hardhat test",
    "verify": "npx hardhat etherscan-verify",
    "create-task:oracle:mainnet": "npx hardhat run ./scripts/create-task-oracle.ts --network optimism",
    "create-task:debt-popper:mainnet": "npx hardhat run ./scripts/create-task-debt-popper.ts --network optimism",
    "create-task:state-update:mainnet": "npx hardhat run ./scripts/create-task-state-update.ts --network optimism",
    "create-task:oracle:sepolia": "npx hardhat run ./scripts/create-task-oracle.ts --network optimismSepolia",
    "create-task:debt-popper:sepolia": "npx hardhat run ./scripts/create-task-debt-popper.ts --network optimismSepolia",
    "create-task:state-update:sepolia": "npx hardhat run ./scripts/create-task-state-update.ts --network optimismSepolia"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "@openzeppelin/contracts": "4.8.1",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "11.0.0",
    "@typechain/hardhat": "6.1.5",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/node": "18.14.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "chai": "4.3.7",
    "dotenv": "16.0.3",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "5.7.2",
    "hardhat": "2.13.0",
    "hardhat-deploy": "0.11.31",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "prettier-plugin-solidity": "1.1.2",
    "solhint": "3.4.0",
    "solhint-plugin-defi-wonderland": "1.1.0",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.2.0",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.*{js,sol,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  },
  "dependencies": {
    "@gelatonetwork/automate-sdk": "3.0.5",
    "@gelatonetwork/web3-functions-sdk": "2.3.0",
    "@hai-on-op/abis": "1.0.0",
    "web3": "1.10.2"
  }
}
